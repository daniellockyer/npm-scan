{
  "name": "npm-check",
  "version": "0.1.0",
  "private": true,
  "description": "Monitor npm publishes and flag newly introduced preinstall and postinstall scripts.",
  "license": "MIT",
  "type": "module",
  "scripts": {
    "start": "node src/index.ts",
    "dev": "node --watch src/index.ts",
    "typecheck": "tsc --noEmit"
  },
  "engines": {
    "node": ">=24"
  },
  "dependencies": {
    "dotenv": "^17.2.3",
    "p-limit": "^5.0.0",
    "semver": "^7.6.0"
  },
  "devDependencies": {
    "@types/node": "^24.0.0",
    "@types/semver": "^7.5.8",
    "typescript": "^5.9.3"
  }
}
